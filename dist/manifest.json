{
  "manifest_version": 3,
  "name": "LexiLens - Dyslexia Assistant",
  "version": "1.0.1",
  "description": "A comprehensive accessibility suite designed to improve reading fluency and comprehension for users with dyslexia, ADHD, and visual processing disorders.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LexiLens"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.tsx-loader-OkEIeVq7.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "fonts/*",
        "icons/*",
        "assets/client-C3Mcq2Xm.js",
        "assets/storage-CorQoHda.js",
        "assets/index.tsx-Cbb-jq7-.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
